                android:gravity="right"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_add" />

                <ImageButton
                    android:id="@+id/editing"
                    android:layout_width="wrap_content"
